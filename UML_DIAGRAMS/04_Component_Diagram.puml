@startuml Component Diagram - Resumate Architecture

' ============================================
' COMPONENT DIAGRAM - RESUMATE ARCHITECTURE
' ============================================

package "Client Layer" {
  component [React Frontend] as Frontend {
    component [Pages] as Pages
    component [Components] as Components
    component [Services] as Services
    component [Context] as Context
    component [i18n] as I18n
  }
}

package "API Layer" {
  component [Express Server] as Server {
    component [Routes] as Routes
    component [Controllers] as Controllers
    component [Middleware] as Middleware
  }
}

package "Business Logic Layer" {
  component [OpenAI Service] as OpenAIService
  component [CV Parser] as CVParser
  component [HTML Generator] as HTMLGen
  component [OCR Service] as OCRService
  component [Text Cleaner] as TextCleaner
}

package "Data Layer" {
  component [MongoDB] as MongoDB {
    database "Users Collection" as UsersDB
    database "CV History Collection" as CVDB
  }
}

package "External Services" {
  component [OpenAI API] as OpenAIAPI
  component [OpenRouter API] as OpenRouter
}

' Frontend internal connections
Pages --> Components
Pages --> Services
Components --> Context
Pages --> I18n

' API Layer connections
Server --> Routes
Routes --> Controllers
Routes --> Middleware
Controllers --> Middleware

' Business Logic connections
Controllers --> OpenAIService
Controllers --> CVParser
Controllers --> HTMLGen
Controllers --> OCRService
CVParser --> HTMLGen
OpenAIService --> TextCleaner

' External API connections
OpenAIService --> OpenAIAPI
OpenAIService --> OpenRouter

' Data connections
Controllers --> MongoDB
MongoDB --> UsersDB
MongoDB --> CVDB

' Client to API connection
Services --> Server

note right of Frontend
  Technologies:
  - React 18
  - Vite
  - Tailwind CSS
  - React Router
  - i18next
end note

note right of Server
  Technologies:
  - Node.js
  - Express.js
  - JWT Authentication
  - Multer (File Upload)
end note

note right of MongoDB
  Database:
  - MongoDB
  - Mongoose ODM
end note

@enduml


